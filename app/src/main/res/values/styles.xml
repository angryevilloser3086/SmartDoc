<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorPrimary</item>
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="colorControlNormal">@color/white_clr</item>
        <item name="colorControlActivated">@color/white_clr</item>
        <item name="colorControlHighlight">@color/colorPrimaryDark</item>
    </style>

    <style name="TextAppearance.App.TextInputLayout" parent="@android:style/TextAppearance">
        <item name="android:textColor">@color/colorPrimaryDark</item>
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>

    </style>

    <style name="AccountEditTextAppTheme" parent="Theme.AppCompat.Light">
        <!-- Customize your theme here. -->
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="colorPrimary">@color/app_clr</item>
        <item name="colorPrimaryDark">@color/app_clr</item>
        <item name="colorAccent">@color/app_clr</item>
        <item name="colorControlNormal">@color/app_clr</item>
        <item name="colorControlActivated">@color/app_clr</item>
        <item name="colorControlHighlight">@color/app_clr</item>
        <item name="android:textColorHint">@color/app_clr</item>
    </style>

    <style name="textHeader">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textColor">@color/white_clr</item>
        <item name="android:textSize">@dimen/font_20sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_gravity">center</item>
    </style>

    <style name="editText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:drawablePadding">@dimen/space_10dp</item>
        <item name="android:maxLines">1</item>
        <item name="android:textSize">@dimen/font_15sp</item>
        <item name="android:textColor">@color/white_clr</item>

    </style>

    <style name="editTextInput">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColorHint">@color/white_clr</item>
    </style>

    <style name="textToolbarHeader">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/white_clr</item>
        <item name="android:textSize">@dimen/font_17sp</item>
        <item name="android:layout_centerInParent">true</item>
    </style>

    <style name="textToolbarSteps">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/white_clr</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:layout_marginRight">@dimen/space_10dp</item>
        <item name="android:textSize">@dimen/font_15sp</item>
        <item name="android:layout_centerInParent">true</item>
    </style>

    <style name="editTextInputBlue">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:theme">@style/AccountEditTextAppTheme</item>
    </style>

    <style name="editTextBlue">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:drawablePadding">@dimen/space_10dp</item>
        <item name="android:maxLines">1</item>
        <item name="android:inputType">textNoSuggestions</item>
        <item name="android:textSize">@dimen/font_15sp</item>
        <item name="android:textColor">@color/black_clr</item>
    </style>

    <style name="redBtn">
        <item name="android:layout_width">@dimen/space_250dp</item>
        <item name="android:layout_height">@dimen/space_45dp</item>
        <item name="android:background">@drawable/white_rect_round_bg</item>
        <item name="android:textSize">@dimen/font_17sp</item>
        <item name="android:textColor">@color/white_clr</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="home_ll">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">0.5</item>
        <item name="android:background">@drawable/white_rect_round_bg</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_margin">3dp</item>
        <item name="android:orientation">vertical</item>
    </style>
    <style name="home_ll1">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">0.5</item>
        <item name="android:background">@drawable/white_rect_round_bg1</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_margin">3dp</item>
        <item name="android:orientation">vertical</item>
    </style>
    <style name="home_ll2">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">0.5</item>
        <item name="android:background">@drawable/white_rect_round_bg1</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_margin">3dp</item>
        <item name="android:orientation">vertical</item>
    </style>



    <style name="home_iv">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
    </style>

    <style name="home_tv">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/white_clr</item>
        <item name="android:textSize">@dimen/font_15sp</item>
    </style>

    <style name="setting_rl">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginRight">@dimen/space_10dp</item>
        <item name="android:layout_marginLeft">@dimen/space_10dp</item>
        <item name="android:background">@drawable/white_rect_round_bg</item>
        <item name="android:padding">@dimen/space_15dp</item>
    </style>

    <style name="setting_iv">
        <item name="android:layout_width">@dimen/space_30dp</item>
        <item name="android:layout_centerInParent">true</item>
        <item name="android:layout_alignParentLeft">true</item>
        <item name="android:layout_marginRight">@dimen/space_10dp</item>
        <item name="android:layout_height">@dimen/space_30dp</item>
    </style>

    <style name="setting_tv">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerInParent">true</item>
        <item name="android:drawableRight">@mipmap/icn_leftarrow</item>
        <item name="android:textColor">@color/black_clr</item>
        <item name="android:textSize">@dimen/font_15sp</item>
        <item name="android:textAllCaps" tools:targetApi="ice_cream_sandwich">true</item>
    </style>


    <style name="card_tv">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/font_15sp</item>
    </style>

    <style name="ACPLDialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>

    </style>

    <style name="STYLE_CONSTRAINT_PERCENT_TV">
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:gravity">center</item>
        <item name="layout_constraintHeight_default">percent</item>
        <item name="layout_constraintWidth_default">percent</item>
    </style>
</resources>
